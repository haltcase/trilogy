{
  "name": "trilogy",
  "version": "0.11.1",
  "description": "No-hassle SQLite with a document-store-like API.",
  "main": "dist/trilogy.js",
  "module": "dist/trilogy.mjs",
  "scripts": {
    "prebuild": "npm run lint",
    "build": "rimraf dist/** && rollup -c && cpy README.md docs",
    "watch": "rimraf dist/** && rollup -c -w",
    "pretest": "npm run build",
    "test": "ava",
    "lint": "eslint src tests",
    "docs": "cpy README.md docs && docsify serve docs",
    "changelog": "standard-changelog -i CHANGELOG.md -o CHANGELOG.md",
    "prepublish": "npm test",
    "commit": "git-cz"
  },
  "repository": "https://github.com/citycide/trilogy",
  "keywords": [
    "knex",
    "model",
    "schema",
    "sqlite",
    "sql.js",
    "storage",
    "database",
    "electron",
    "mongoose",
    "document"
  ],
  "author": "citycide",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/citycide/trilogy/issues"
  },
  "files": [
    "src",
    "dist",
    "LICENSE",
    "README.md",
    "CHANGELOG.md"
  ],
  "homepage": "https://citycide.github.io/trilogy",
  "dependencies": {
    "component-type": "^1.2.1",
    "fs-jetpack": "^0.10.5",
    "generic-pool": "^3.1.6",
    "knex": "^0.12.6",
    "osom": "^2.1.3"
  },
  "devDependencies": {
    "ava": "^0.17.0",
    "babel-core": "^6.21.0",
    "babel-eslint": "^7.1.1",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-external-helpers": "^6.18.0",
    "babel-preset-env": "^1.1.5",
    "babel-preset-stage-0": "^6.16.0",
    "babel-register": "^6.18.0",
    "babel-runtime": "^6.20.0",
    "commitizen": "^2.9.0",
    "cpy-cli": "^1.0.1",
    "cz-conventional-changelog": "^1.2.0",
    "docsify-cli": "^1.2.1",
    "eslint": "^3.12.2",
    "eslint-config-standard": "^6.2.1",
    "eslint-plugin-prefer-let": "^0.1.0",
    "eslint-plugin-promise": "^3.4.0",
    "eslint-plugin-standard": "^2.0.1",
    "rimraf": "^2.5.4",
    "rollup": "0.39.2",
    "rollup-plugin-babel": "^2.7.1",
    "rollup-watch": "^3.2.2",
    "sql.js": "^0.4.0",
    "sqlite3": "^3.1.8",
    "standard-changelog": "0.0.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "ava": {
    "files": [
      "tests/**/*.js"
    ],
    "verbose": true,
    "babel": "inherit"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": 4.7
          },
          "loose": true
        }
      ],
      "stage-0"
    ],
    "plugins": [
      "external-helpers",
      "add-module-exports"
    ]
  }
}
